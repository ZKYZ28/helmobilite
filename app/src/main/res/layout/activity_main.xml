<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">


    <include layout="@layout/header"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="600dp">


        <LinearLayout
            android:id="@+id/normalGame"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_marginBottom="15dp"
            android:background="@color/main_blue"
            android:orientation="vertical"
            android:clickable="true">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:elevation="2dp"
                android:text="Mode normal"
                android:textColor="@color/white"
                android:textSize="23dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="364dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:text="Jouez en faisant votre choix parmis une \nsérie de questions diverses et variées"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:background="@color/main_red"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:text="Mode création"
                android:textColor="@color/white"
                android:textSize="23dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="364dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:text="Créez et jouez avec vos propres catégories"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle"
            android:gravity="center">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="OU" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>